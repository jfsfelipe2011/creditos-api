{
    "name": "creditos",
    "description": "Api para microserviço de controle de créditos",
    "keywords": ["microframework", "rest", "router", "psr7", "api"],
    "homepage": "https://github.com/jfsfelipe2011/creditos-api",
    "license": "",
    "authors": [
        {
            "name": "José Felipe da Silva",
            "email": "jfsfelipe2011@gmail.com",
            "homepage": "https://github.com/jfsfelipe2011"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.7",
        "firebase/php-jwt": "5.0",
        "tuupola/slim-jwt-auth": "3.1",
        "tuupola/slim-basic-auth": "3.2",
        "awurth/slim-validation": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
